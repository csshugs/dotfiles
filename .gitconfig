[user]
	name = Dennis HeibuÌˆlt
	email = mail@dennisheibuelt.com
[alias]
    schmu = blame
    co = checkout
    b = branch
    stats = shortlog -sn --all --no-merges
    lg = log --pretty=oneline --abbrev-commit --graph --decorate
[push]
    default = matching
[color]
    ui = true
[credential]
    helper = cache --timeout=3600
[core]
    editor = vim
	excludesfile = /Users/dheibuelt/.gitignore_global
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool "vimdiff"]
	prompt = false
[diff]
    tool = vimdiff
[commit]
    template = /Users/dheibuelt/.stCommitMsg
